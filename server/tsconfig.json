{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build",
        "target": "ES6",
        "module": "commonjs",
        "removeComments": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "shared/*": [
                "../shared/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}
